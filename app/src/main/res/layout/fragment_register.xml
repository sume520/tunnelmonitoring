<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_et_account"
            android:hint="用户名"
            android:layout_above="@+id/reg_et_department"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>

    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_et_sector"
            android:hint="部门"
            android:layout_above="@+id/reg_et_position"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_et_department"
            android:hint="单位"
            android:layout_above="@+id/reg_et_sector"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>
    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_et_email"
            android:hint="邮箱"
            android:layout_below="@+id/reg_et_position"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_et_passwd"
            android:hint="密码"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/reg_et_phonenum"
            android:layout_marginTop="20dp"/>
    <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_et_register"
            android:text="注册"
            android:layout_below="@+id/reg_et_passwd"
            android:layout_centerHorizontal="true" />

    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_et_position"
            android:hint="职位"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/reg_et_email"
            android:layout_alignStart="@+id/reg_et_email" />

    <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/reg_et_phonenum"
            android:hint="手机号"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/reg_et_email"
            android:layout_alignLeft="@+id/reg_et_passwd"
            android:layout_alignStart="@+id/reg_et_passwd" />

</RelativeLayout>
